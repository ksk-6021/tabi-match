<header class='top-page-header'>
  <div class='site-title'>
    <h1 class='site-title wrapper'>
      <%= link_to "たびマッチ", root_path, class:'site-title-link' %>
    </h1>
    
  </div>
  <div class='nav'>
    <% if user_signed_in? %>
     <%= link_to image_tag(current_user.avatar, class: "post-user-img-header"), user_path(current_user) if current_user.avatar.attached? %>
    <% end %>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to '新規募集', new_post_path, class: "new-post" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,  class: "logout" %></li> 
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
    </div>
  </div>
</header>